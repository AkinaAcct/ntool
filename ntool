    "3" "安装php环境" \
    "4" "安装MySQL(mariadb)" \
    "0" "返回上一页")
    exitstatus=$?
	if [ $exitstatus != 0 ];then
        other_tool_tui
    fi
	case $webc in
		0)
			other_tool_tui
			;;
		1)
			${pkgi} nginx
			echo "done"
			;;
		2)
			${pkgi} apache2
			echo "done"
			;;
		3)
			${pkgi} php
			echo "done"
			;;
		4)
			${pkgi} mariadb
			echo "done"
			;;
	esac
}

function termux_main_tui(){
    cd ${MAINPATH}
    mainchoice=$(dialog --output-fd 1 --title "ntool-tui:main tui" --menu "一言:$(curl https://v1.hitokoto.cn/?encode=text 2>/dev/null)\n你的系统为${OS}\n选择一个以继续" 15 70 8  \
    "1" "已烂尾的容器功能" \
    "2" "其它功能" \
    "3" "备份功能" \
    "4" "计算圆周率(好水)" \
    "5" "一言" \
    "6" "原系统桌面" \
    "7" "LSPatch/XPatch功能" \
    "8" "ntafetch-使用ntafetch作为motd" \
    "00" "更新" \
    "0" "退出")
    exitstatus=$?
    if [ $exitstatus != 0 ];then
        echo -e "${BLUE}b${GREEN}y${YELLOW}e${RESET}"
        exit 0
    fi
    case $mainchoice in 
        00)
	        check_update
        	;;
        0)
            echo -e "${BLUE}b${GREEN}y${YELLOW}e${RESET}"
            exit 0
            ;;
        1)
            container_tui
            ;;
        2)
            other_tool_tui
            ;;
        3)
            check_if_not_termux_warning
            backup_tui
            ;;
        4)
            if command -v bc > /dev/null;then
                local BC=$(dialog --title "ntool-tui:bc PI" --inputbox "输入计算位数    越往后面算的越慢" 15 70 3>&1 1>&2 2>&3)
                exitstatus=$?
                if [ $exitstatus != 0 ];then
                    termux_main_tui
                fi
                echo "计算开始时间:$(date '+%Y-%m-%d %H:%M:%S')" >> ~/.ntool/pi.txt
                echo "scale=${BC}; 4*a(1)" | bc -l -q >> ~/.ntool/pi.txt
                echo "计算结束时间:$(date '+%Y-%m-%d %H:%M:%S')" >> ~/.ntool/pi.txt
                dialog --title "ntool-tui:success" --msgbox "完成!计算结果可在~/.ntool/pi.txt看到" 15 70
                termux_main_tui
            else
                ${pkgi} bc
                termux_main_tui
            fi
            ;;
        5)
            dialog --title "ntool-一言" --msgbox "$(curl https://v1.hitokoto.cn/?encode=text 2>/dev/null)" 15 70
            termux_main_tui
            ;;
        6)
            check_if_not_android_warning
            termux_install_gui_tui
            ;;
        7)
            patch_frame_choose
            ;;
        8)
            if (dialog --title "ntool-tui:developing action" --defaultno --yesno "ntafetch由无数个echo -e组成\n写这个的主要原因是因为termux自带motd过于臃肿\n并不推荐使用，因为${RED}没有经过足够的测试" 15 70);then
                wait_for_dev_tui
                termux_main_tui
            else
                termux_main_tui
            fi
            ;;
    esac
}
clear
termux_main_tui
exit 0
